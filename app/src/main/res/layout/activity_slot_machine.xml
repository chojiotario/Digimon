<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_slot_machine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/wallpaper1"
    tools:context="lucas.digimon.SlotMachineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llCabecalho"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#a000">

        <TextView
            android:id="@+id/tvNomeInGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="#fff"
            android:text="@string/qtd_fichas"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tvQtdFichas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12sp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#fff"
            android:id="@+id/timer"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/llContainer"
        android:layout_below="@+id/llCabecalho"
        android:layout_above="@+id/llRodape"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/ivSlot1"
            style="@style/icon_slot"
            android:src="@drawable/coragem"
            android:background="#a000"/>

        <ImageView
            android:id="@+id/ivSlot2"
            style="@style/icon_slot"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/coragem"
            android:background="#a000"/>

        <ImageView
            android:id="@+id/ivSlot3"
            style="@style/icon_slot"
            android:src="@drawable/coragem"
            android:background="#a000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llRodape"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <Button
            android:layout_gravity="center"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/iniciar"
            android:textSize="@dimen/button_text_size"
            android:textAlignment="center"
            android:textColor="#fff"
            android:id="@+id/btn_iniciar"
            android:onClick="jogar"
            android:background="#000"/>

    </LinearLayout>

</RelativeLayout>
